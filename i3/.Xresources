! Base16 Bright
! Scheme: Chris Kempson (http://chriskempson.com)
! https://github.com/chriskempson/base16-xresources
#define base00 #000000
#define base01 #303030
#define base02 #505050
#define base03 #b0b0b0
#define base04 #d0d0d0
#define base05 #e0e0e0
#define base06 #f5f5f5
#define base07 #ffffff
#define base08 #fb0120
#define base09 #fc6d24
#define base0A #fda331
#define base0B #a1c659
#define base0C #76c7b7
#define base0D #6fb3d2
#define base0E #d381c3
#define base0F #be643c

*.foreground:   base05
*.background:   base00
*.cursorColor:  base05

*.color0:       base00
*.color1:       base08
*.color2:       base0B
*.color3:       base0A
*.color4:       base0D
*.color5:       base0E
*.color6:       base0C
*.color7:       base05

*.color8:       base03
*.color9:       base09
*.color10:      base01
*.color11:      base02
*.color12:      base04
*.color13:      base06
*.color14:      base0F
*.color15:      base07

! Font configs
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.antialias: 1
Xft.rgba: rgb

! urxvt
URxvt.intensityStyles: false
URxvt*buffered: true
URxvt*cursorBlink: true
URxvt*underlineColor: yellow
URxvt*font: xft:Source Code Pro:style=Light:size=12,xft:DejaVu Sans Mono:style=Book:size=12
URxvt*boldFont: xft:Source Code Pro:style=Regular:size=12,xft:DejaVu Sans Mono:style=Bold:size=12
URxvt*letterSpace: -1
URxvt*depth: 32
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*loginShell: true
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: true
URxvt.secondaryScroll: false
URxvt*saveLines: 5000
URxvt*termName: rxvt-unicode
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,fork-here,font-size
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true
URxvt.url-select.button: 1
Urxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.Mod4-Shift-Return: perl:fork-here:fork-at-cwd
! Change font size on Control-Plus(or Equal)/Minus
URxvt.keysym.C-0x2b: font-size:increase
URxvt.keysym.C-0x3d: font-size:increase
URxvt.keysym.C-0x2d: font-size:decrease
