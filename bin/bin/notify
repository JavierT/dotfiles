#!/bin/sh

if [ $# -lt 2 ]; then
  echo "Usage:"
  echo "notify title [description] time"
  exit
fi

if [ $# -eq 2 ]; then
  echo "No description, using description=title"
  at_time="$2"
  description="$1"
else
  at_time="$3"
  description="$2"
fi


if ! pgrep atd > /dev/null; then
  echo "atd not running, starting it."
  sudo atd
fi

echo "notify-send -u critical \"$1\" \"$description\"" | at "$at_time"
