#!/bin/sh
# Load required modules for VirtualBox/Vagrant

# This is to ask for sudo if user forgot
if (($EUID != 0)); then
  if [[ -t 1 ]]; then
    sudo "$0" "$@"
  else
    exec 1>output_file
    gksu "$0 $@"  # This to ask for sudo if not in terminal
  fi
  exit
fi

rmmod vboxnetadp
rmmod vboxnetflt
rmmod vboxdrv
