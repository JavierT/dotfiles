#!/bin/bash
# Taken from http://www.jejik.com/articles/2008/10/setting_up_dual_monitors_system-wide_with_xrandr_on_debian_lenny/

xrandr | grep VGA1 | grep " connected "
if [ $? -eq 0 ]; then
    # External monitor is connected
    xrandr --output VGA1 --primary --auto --right-of LVDS1
    if [ $? -ne 0 ]; then
        # Something went wrong. Autoconfigure the internal monitor and disable
        # the external one
        xrandr --output LVDS1 --primary --auto --output VGA1 --off
        export XRANDR_PRIMARY=LVDS1
        export XRANDR_SECONDARY=LVDS1
    else
        export XRANDR_PRIMARY=VGA1
        export XRANDR_SECONDARY=LVDS1
    fi
else
    # Only internal monitor
    xrandr --output LVDS1 --primary --auto --output VGA1 --off
    export XRANDR_PRIMARY=LVDS1
    export XRANDR_SECONDARY=LVDS1
fi
